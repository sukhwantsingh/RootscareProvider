<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_doctorappoitment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:elevation="@dimen/_20sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/ll_mainlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:src="@drawable/patient_photo" />

                        <com.rootscare.customviews.MyTextView
                            android:id="@+id/tvDoctorName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Patient Name : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/txt_patient_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:lines="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Booking Date : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/txt_booking_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:id="@+id/tv_addressName"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Task Details : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:id="@+id/tv_address"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Phone Number : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tvPhoneNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Appointment Date : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tvAppointmentDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAppointmentTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Appointment Time : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tvAppointmentTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Appointment Status : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tvAppointmentStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Acceptance Status : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tvAcceptanceStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAboutSymptoms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About Symptom :"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_prescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp12"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/dp12"
                                android:contentDescription="@null"
                                android:scaleType="fitXY"
                                android:src="@drawable/prescription"
                                android:transitionName="@string/transition_string"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/llRecording"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/img_play"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/play" />

                                <Chronometer
                                    android:id="@+id/txt_elaspsed_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toStartOf="@+id/img_slash"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/dp12" />

                                <ImageView
                                    android:id="@+id/img_slash"
                                    android:layout_width="10dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/dimen_10dp"
                                    android:layout_toStartOf="@+id/txt_time"
                                    android:scaleType="fitXY"
                                    android:src="@color/gray_light" />

                                <com.rootscare.customviews.MyTextView
                                    android:id="@+id/txt_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_alignTop="@+id/txt_elaspsed_time"
                                    android:layout_alignBottom="@+id/txt_elaspsed_time"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:minWidth="50dp"
                                    android:text=""
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/dp12" />

                                <SeekBar
                                    android:id="@+id/seekBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_alignTop="@+id/txt_elaspsed_time"
                                    android:layout_alignBottom="@+id/txt_elaspsed_time"
                                    android:layout_centerInParent="true"
                                    android:layout_toStartOf="@+id/txt_elaspsed_time"
                                    android:layout_toEndOf="@+id/img_play"
                                    android:src="@drawable/recording_line" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/llOrPortion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/txt_or_bg" />


                            </RelativeLayout>

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tvSymptoms"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text=""
                                android:textSize="@dimen/_12ssp"
                                android:visibility="gone" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:visibility="visible">

                            <com.rootscare.customviews.MyCustomButton
                                android:id="@+id/btn_rootscare_doctor_consulting"
                                android:layout_width="@dimen/_282sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@drawable/square_bg_green"
                                android:drawableStart="@drawable/video_large"
                                android:drawablePadding="@dimen/dp15"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:text="Start Video Consultation"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:visibility="invisible" />

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/llPrescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Prescription"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/prescriptionRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/llBottomAcceptReject"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/appiontment_bg"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_10dp">

                                <!--<com.rootscare.customviews.MyCustomButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentStart="true"
                                    android:background="@drawable/rounded_green_btn"
                                    android:text="Accept"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />-->

                                <com.rootscare.customviews.MyCustomButton
                                    android:id="@+id/btnAccept"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentStart="true"
                                    android:background="@drawable/rounded_green_btn"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:text="@string/accept"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />


                                <com.rootscare.customviews.MyCustomButton
                                    android:id="@+id/btn_rejectt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/rounded_red_btn"
                                    android:text="@string/reject"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/llBottomUploadPrescription"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/appiontment_bg"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_10dp">

                                <!--<com.rootscare.customviews.MyCustomButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentStart="true"
                                    android:background="@drawable/rounded_green_btn"
                                    android:text="Accept"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />-->

                                <com.rootscare.customviews.MyCustomButton
                                    android:id="@+id/btnCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentStart="true"
                                    android:background="@drawable/rounded_green_btn"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:text="@string/complete"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyCustomButton
                                    android:id="@+id/btnUploadPrescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/rounded_green_btn"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:text="@string/upload_prescription"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />

                            </RelativeLayout>


                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>