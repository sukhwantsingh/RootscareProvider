<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sidemenue_dashboard"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/check"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/check2"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:visibility="gone"
            android:layout_alignTop="@+id/item_tv"
            android:layout_alignBottom="@+id/item_tv"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/ic_launcher_foreground" />

        <com.rootscare.customviews.MyTextView
            android:id="@+id/item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/check2"
            android:text="My Upcoming Appointment"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@id/check"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/background_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/check"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#1074BC" />
    </RelativeLayout>
</LinearLayout>