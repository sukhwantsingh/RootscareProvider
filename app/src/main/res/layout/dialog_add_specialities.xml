<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_header_batch_title"
            android:visibility="gone"
            android:background="@color/background_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/txt_exam_student_name"

                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Add Reason"
                android:textColor="@color/white"
                android:textSize="@dimen/dp14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/ll_header_batch_title"
            android:id="@+id/ll_main_contain"
            android:background="@drawable/add_specialities_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Select Specalities"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:drawableEnd="@drawable/back"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/add_specialities_dropdown_bg"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:textStyle="bold"
                    android:textColor="@color/txt_color"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    />

                <com.rootscare.customviews.MyEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="amount"
                    android:gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/amount_bg"
                    />

            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_main_contain"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/btn_negative"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/oval_textview_blue_solid_background"
                android:elevation="5dp"
                android:gravity="center"
                android:text="@string/cancel"
                android:visibility="gone"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/btn_positive"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/green_rectangle"
                android:elevation="5dp"
                android:gravity="center"

                android:text="@string/ok"
                android:textColor="@color/background_white"
                android:textSize="@dimen/dp15"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

