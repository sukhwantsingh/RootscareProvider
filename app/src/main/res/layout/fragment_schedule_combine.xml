                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="@dimen/dp2"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp2">

                    <TextView
                        style="@style/AppTheme.TextRegular"
                        android:layout_marginTop="@dimen/dp10"
                        android:paddingHorizontal="@dimen/dp10"
                        android:text="@string/add_availability_schedule"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        style="@style/AppTheme.TextRegular"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp5"
                        android:paddingHorizontal="@dimen/dp10"
                        android:text="@string/this_refers_to_your_available_time_slot"
                        android:textColor="@color/colorTxtGrey1"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        style="@style/AppTheme.TextRegular"
                        android:layout_marginTop="@dimen/dp12"
                        android:paddingHorizontal="@dimen/dp10"
                        android:text="@string/accept_or_disable_your_booking"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                    <RadioGroup
                        android:id="@+id/rbBooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/dp10"
                        android:paddingTop="@dimen/dp4"
                        android:weightSum="1">

                        <RadioButton
                            android:id="@+id/rbAccept"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".5"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/accept_booking"
                            android:textColor="@color/colorTxtGrey1"
                            android:textSize="@dimen/dp14" />

                        <RadioButton
                            android:id="@+id/rbHide"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight=".5"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/hide_booking"
                            android:textColor="@color/colorTxtGrey1"
                            android:textSize="@dimen/dp14" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/llHideAccept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp2"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="1"
                            android:layout_marginTop="@dimen/dp12"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvh_bokingPrefha"
                                style="@style/AppTheme.TextRegular"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:paddingHorizontal="@dimen/dp10"
                                android:text="@string/booking_preferences"
                                android:textColor="@color/txt_dash_heading"
                                android:textSize="@dimen/dp15" />

                            <TextView
                                android:id="@+id/tvh_bokingPrefha2"
                                style="@style/AppTheme.TextRegular"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:paddingHorizontal="@dimen/dp6"
                                android:textColor="@color/txt_dash_heading"
                                android:textSize="@dimen/dp15" />
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/llbokingPrefhva"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dp10"
                            android:weightSum="1">

                            <RadioButton
                                android:id="@+id/rbTask"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".5"
                                android:clickable="false"
                                android:fontFamily="@font/rubik_regular"
                                android:text="@string/_30_min_slots"
                                android:textColor="@color/colorTxtGrey1"
                                android:textSize="@dimen/dp14" />

                            <RadioButton
                                android:id="@+id/rbHours"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".5"
                                android:clickable="false"
                                android:fontFamily="@font/rubik_regular"
                                android:text="@string/_2_4_6_8_12_hours"
                                android:textColor="@color/colorTxtGrey1"
                                android:textSize="@dimen/dp14" />
                        </LinearLayout>

                        <TextView
                            style="@style/AppTheme.TextRegular"
                            android:layout_marginTop="@dimen/dp12"
                            android:paddingHorizontal="@dimen/dp10"
                            android:text="@string/point_your_availability_for_appointment"
                            android:textColor="@color/txt_dash_heading"
                            android:textSize="@dimen/dp15" />

                        <LinearLayout
                            android:id="@+id/llOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/dp10"
                            android:paddingVertical="@dimen/dp5">

                            <Switch
                                android:id="@+id/sMon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:theme="@style/RadioButtonTheme" />

                            <TextView
                                android:id="@+id/tvMon"
                                style="@style/AppTheme.TextMedium"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="MON"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dp14" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/tvMonStart"
                                    style="@style/AppTheme.TextMedium"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/dp10"
                                    android:background="@drawable/schedule_bg_slot"
                                    android:drawableEnd="@drawable/drop_down_new"
                                    android:gravity="center"
                                    android:paddingHorizontal="@dimen/dp5"
                                    android:paddingVertical="@dimen/dp4"
                                    android:text="08:30 AM"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/dp12" />


                                <TextView
                                    android:id="@+id/tvMonEnd"
                                    style="@style/AppTheme.TextMedium"
                                    android:layout_gravity="center"
                                    android:background="@drawable/schedule_bg_slot"
                                    android:drawableRight="@drawable/drop_down_new"
