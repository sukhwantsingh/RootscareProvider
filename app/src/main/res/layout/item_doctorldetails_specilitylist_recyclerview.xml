<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="0dp"
                android:src="@drawable/thin_forward_arrow_black"
                android:layout_alignTop="@+id/txt_doctordetails_specility"
                android:layout_alignBottom="@+id/txt_doctordetails_specility"
                android:layout_alignParentStart="true" />

            <com.rootscare.customviews.MyTextView
                android:id="@+id/txt_doctordetails_specility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgArrow"
                android:padding="@dimen/_2sdp"
                android:text="Neurology"
                android:layout_marginStart="10dp"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:layout_margin="@dimen/_3sdp"
            android:background="@color/home_page_view_color"
            android:visibility="gone" />
    </LinearLayout>
</layout>