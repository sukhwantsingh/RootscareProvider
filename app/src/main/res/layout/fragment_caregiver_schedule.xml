<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_doctorappoitment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_20sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_mainlayout"
                        android:orientation="vertical">
                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hourly Rate"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:textColor="@color/txt_color"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14ssp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Slot"
                                    android:padding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/txt_color"
                                    android:textStyle="bold" />
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Amont"
                                    android:padding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/txt_color"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:weightSum="2">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="4 hour"
                                    android:padding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:text="$200"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:weightSum="2">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/_5sdp"
                                    android:text="8 hour"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:text="$400"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="#EBF8F5"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:weightSum="2">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="12 hour"
                                    android:padding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:text="$800"
                                    android:padding="@dimen/_3sdp"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:weightSum="2">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:text="24 hour"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:text="$1200"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <com.rootscare.customviews.MyCustomButton
                            android:id="@+id/btn_nurses_manage_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:textAllCaps="false"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>