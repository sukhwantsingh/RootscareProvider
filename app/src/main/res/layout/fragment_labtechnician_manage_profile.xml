<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_doctor_profile"
                        android:src="@drawable/doctor_profile_photo"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/img_doctor_profile">
                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr. Maya Grey"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/txt_color"
                            android:textStyle="bold"/>
                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="maya@gmail.com"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/txt_color"
                            android:textStyle="bold"/>
                        <Button
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/txt_color"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            android:textSize="@dimen/_8ssp"
                            android:background="@drawable/edit_profile_btn_bg"
                            android:text="Edit Profile"/>

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdview_appoitment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:elevation="@dimen/_20sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:id="@+id/ll_mainlayout"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Doctor Name"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color" />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="License Number"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Date of Birth"
                                    android:textSize="@dimen/_10ssp"
                                    android:drawableEnd="@drawable/calendar_month"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Language Fluency"
                                    android:textSize="@dimen/_10ssp"
                                    android:drawableEnd="@drawable/new_down_arrow"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <RadioGroup
                                    android:id="@+id/radioYesOrNo"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content"
                                    >
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:text="Male"
                                        android:textColor="@color/txt_color"
                                        android:textSize="@dimen/_10ssp"
                                        />
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Female"
                                        android:textSize="@dimen/_10ssp"
                                        android:checked="true"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:textColor="@color/txt_color"
                                        />
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Other"
                                        android:visibility="gone"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:textColor="@color/txt_color"
                                        android:textSize="@dimen/_10ssp"
                                        />
                                </RadioGroup>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nationality"
                                    android:textSize="@dimen/_10ssp"
                                    android:drawableEnd="@drawable/new_down_arrow"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Training Qualifications"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Major Appointments "
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="Professional Department"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:text="Continuing Education"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Working Status"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1ssp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/rootscare_text_and_view_color" />
                            </LinearLayout>
                            <com.rootscare.customviews.MyCustomButton
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginEnd="@dimen/_50sdp"
                                android:layout_marginStart="@dimen/_50sdp"
                                android:id="@+id/btn_rootscare_booking_doctor"
                                android:layout_weight="1"
                                android:visibility="visible"
                                android:layout_gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:drawableEnd="@drawable/white_arrow_circle"

                                android:textSize="@dimen/_10ssp"
                                android:background="@drawable/booking_new_bg"
                                android:text="Submit"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>