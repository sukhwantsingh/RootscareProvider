<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_doctorappoitment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_20sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_mainlayout"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_nurses_profile_photo"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/dp12"
                                android:src="@drawable/nursesphoto"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:orientation="vertical"
                                android:layout_toEndOf="@+id/txt_nurses_profile_photo">
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kristen Lewis"
                                    android:layout_marginTop="@dimen/dp15"
                                    android:layout_marginStart="@dimen/dp12"
                                    android:layout_marginEnd="@dimen/dp12"
                                    android:textColor="@color/txt_color"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14ssp"/>
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="maya@gmail.com"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/dp12"
                                    android:layout_marginEnd="@dimen/dp12"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    android:textStyle="bold"/>
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp12"
                                    android:layout_marginEnd="@dimen/dp12"
                                    android:text="Working experience 25 yrs"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@color/txt_color"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </RelativeLayout>


                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BMRC Hospital"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:textColor="@color/txt_color"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14ssp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:orientation="horizontal">
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:text="Patient Name : "/>
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/txt_patient_name"
                                android:textSize="@dimen/_11ssp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:text="Mr. Singh"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:orientation="horizontal">
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:text="Booking Date : "/>
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/txt_booking_date"
                                android:textSize="@dimen/_11ssp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:text="15 Feb 2020"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:orientation="horizontal">
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:text="Address : "/>
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_11ssp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:text="5835 LEHMAN DR,Colorado Springs Kolkata,700156"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:orientation="horizontal">
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:text="Phone Number : "/>
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_11ssp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:text="1234567890"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:orientation="horizontal">
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:text="Appointment Date : "/>
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/_11ssp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:text="15 Feb 2020"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginEnd="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:orientation="vertical">
                            <com.rootscare.customviews.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="About Symptom :"
                                android:textStyle="bold"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/img_play"
                                    android:src="@drawable/play"
                                    />
                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"
                                    android:text="00:30"
                                    android:id="@+id/txt_time"
                                    android:textSize="@dimen/dp12"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/img_play"
                                    android:layout_toStartOf="@+id/txt_time"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/recording_line"/>
                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/txt_or_bg"/>


                            </RelativeLayout>

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Weakness and Aches in Muscles and Joints"
                                android:textSize="@dimen/_12ssp"/>


                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_rootscare_doctor_consulting"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:background="@drawable/blue_booking_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Consultation"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/appiontment_bg">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_margin="@dimen/dimen_10dp">
                                <com.rootscare.customviews.MyCustomButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:text="Accept"
                                    android:textSize="@dimen/_10ssp"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:background="@drawable/rounded_green_btn"
                                    android:layout_alignParentStart="true"/>

                                <com.rootscare.customviews.MyCustomButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:text="Reject"
                                    android:textColor="@color/colorPrimary"
                                    android:background="@drawable/rounded_white_btn"
                                    android:textSize="@dimen/_10ssp"
                                    android:textAllCaps="false"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>


                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>