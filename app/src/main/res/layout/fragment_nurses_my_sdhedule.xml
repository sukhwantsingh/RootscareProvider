<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_doctorappoitment_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/ll_mainlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:text="Hourly Rate"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Slot"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Amont"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="4 hour"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="$200"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="8 hour"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="$400"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="12 hour"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="$800"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="24 hour"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:text="$1200"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.rootscare.customviews.MyCustomButton
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Save Hourly Rate"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:text="Slot Wise Rate(each 30 minutes)"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="Slot"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_10ssp" />

                            <com.rootscare.customviews.MyEditTextView
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_comm_bg"
                                android:gravity="center"
                                android:maxLines="1"
                                android:padding="@dimen/_3sdp"
                                android:text="$300"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView_slotwise_rate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp" />

                            <com.rootscare.customviews.MyTextView
                                android:id="@+id/tv_no_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/_3sdp"
                                android:gravity="center"
                                android:text="@string/no_data"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dp16"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <com.rootscare.customviews.MyCustomButton
                            android:id="@+id/btn_nurses_manage_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_50sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Save"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>