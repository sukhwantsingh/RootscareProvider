<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/common_bg"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/crdview_doctorappoitment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:elevation="@dimen/_4sdp">

                <LinearLayout
                    android:id="@+id/ll_mainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_nurse_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rootscare.customviews.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp12"
                            android:text="Hourly Rate"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Slot"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                                <com.rootscare.customviews.MyTextView
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="Amount (SAR)"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:id="@+id/tvTitleForPrice1"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="2 Hours"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:id="@+id/etForPrice1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:digits="0123456789"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:id="@+id/tvTitleForPrice2"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="4 Hours"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:id="@+id/etForPrice2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:digits="0123456789"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:id="@+id/tvTitleForPrice3"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="6 Hours"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:id="@+id/etForPrice3"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:digits="0123456789"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:id="@+id/tvTitleForPrice4"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="8 Hours"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:id="@+id/etForPrice4"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:digits="0123456789"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="#EBF8F5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <com.rootscare.customviews.MyTextView
                                    android:id="@+id/tvTitleForPrice5"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:padding="@dimen/_5sdp"
                                    android:text="12 Hours"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />

                                <com.rootscare.customviews.MyEditTextView
                                    android:id="@+id/etForPrice5"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_comm_bg"
                                    android:digits="0123456789"
                                    android:gravity="center"
                                    android:hint="Price"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="@dimen/_3sdp"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.rootscare.customviews.MyCustomButton
                            android:id="@+id/btnSubmit1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Save Hourly Rate"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                    <com.rootscare.customviews.MyTextView
                        android:id="@+id/tv_slot_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp12"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp12"
                        android:text="Slot Rate(each 30 minutes)"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_slot_list"
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_nurse_task_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="#EBF8F5"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <com.rootscare.customviews.MyTextView
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="Slot"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_10ssp" />

                            <com.rootscare.customviews.MyEditTextView
                                android:id="@+id/etForPrice6"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_comm_bg"
                                android:digits="0123456789"
                                android:gravity="center"
                                android:hint="Price"
                                android:inputType="number"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <com.rootscare.customviews.MyCustomButton
                            android:id="@+id/btnSubmit2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/recyclerView_nurse_task_list"
                            android:layout_marginStart="@dimen/dp12"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@drawable/booking_new_bg"
                            android:drawableEnd="@drawable/white_arrow_circle"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Save Slot Rate"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>