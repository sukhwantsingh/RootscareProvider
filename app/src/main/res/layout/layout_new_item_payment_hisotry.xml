<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />


    </data>

    <LinearLayout
        android:id="@+id/ll_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="0dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:background="@color/price_bg_item"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp16"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/dp12"
            android:weightSum="5">

            <TextView
                android:id="@+id/tvIdValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center_vertical"
                android:text="#2564"
                android:textColor="@color/indicator_color"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/tvDateValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center_vertical"
                android:text="25/02/2020"
                android:textColor="@color/txt_dash_heading"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/tvAmountValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center_horizontal"
                android:text="400"
                android:textColor="@color/txt_dash_heading"
                android:textSize="@dimen/dp12" />

            <TextView
                android:id="@+id/tvPaymentTypeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_regular"
                android:gravity="center_vertical"
                android:text="COD"
                android:textColor="@color/txt_dash_heading"
                android:textSize="@dimen/dp12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvPaymentStatusValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp6"
                    android:paddingVertical="@dimen/dp3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp9"
                    tools:text="Pending"
                    tools:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>