<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top_toolbar"
            layout="@layout/common_header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/white"
            android:layout_below="@+id/top_toolbar"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_registration_setp_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp16"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvh1"
                    style="@style/AppTheme.TextMedium"
                    android:text="@string/add_bank_details"
                    android:textColor="@color/txt_dash_heading"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:id="@+id/tvsh1"
                    style="@style/AppTheme.TextRegular"
                    android:layout_marginTop="@dimen/dp4"
                    android:text="@string/bank_detail_text_info"
                    android:textColor="@color/colorTxtGrey1"
                    android:textSize="@dimen/dp12" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_firstname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp20">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_bn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/bank_name_"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_lastname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_reg_acn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/account_name"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_acc_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/account_number"
                        android:imeOptions="actionDone"
                        android:inputType="numberPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_cnf_acn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/confirm_account_number"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_dob"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ibn_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/ibn_code"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>
     <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_swift"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_swift_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/swift_optional_number"
                        android:imeOptions="actionDone"
                        android:inputType="textVisiblePassword"
                        android:singleLine="true"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:hint="@string/bank_account_address"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textColor="@color/txt_dash_heading"
                        android:textSize="@dimen/dp15" />

                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/cb_agree"
                    style="@style/AppTheme.TextRegular"
                    android:layout_marginTop="@dimen/dp16"
                    android:paddingStart="@dimen/dp5"
                    android:paddingTop="0dp"
                    android:text="@string/you_agree_text_add_bank"
                    android:textColor="@color/colorTxtGrey1"
                    android:textSize="@dimen/dp14" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit"
                    style="@style/AppTheme.BtnMediumBlue"
                    android:layout_marginVertical="@dimen/dp30"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:textSize="@dimen/dp14" />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


</layout>